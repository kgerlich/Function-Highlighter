{
  "name": "function-highlighter",
  "displayName": "Function Highlighter",
  "version": "0.13.0",
  "description": "Highlights functions with distinct pastel colors across multiple languages (C/C++, Python, JavaScript, TypeScript, Java, Rust, Go, Ruby, PHP, C#, Bash)",
  "publisher": "KlausGerlicher",
  "repository": {
    "type": "git",
    "url": "https://github.com/kgerlich/Function-Highlighter"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onView:functionHighlight.functionsView",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:java",
    "onLanguage:rust",
    "onLanguage:go",
    "onLanguage:ruby",
    "onLanguage:php",
    "onLanguage:csharp",
    "onLanguage:bash"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "functionHighlight",
          "title": "Function Highlight",
          "icon": "resources/function-icon.svg"
        }
      ]
    },
    "views": {
      "functionHighlight": [
        {
          "id": "functionHighlight.functionsView",
          "name": "Functions"
        }
      ]
    },
    "commands": [
      {
        "command": "functionHighlight.goToFunction",
        "title": "Go to Function"
      },
      {
        "command": "functionHighlight.refreshFunctions",
        "title": "Refresh Function List",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "functionHighlight.refreshFunctions",
          "when": "view == functionHighlight.functionsView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Function Highlight",
      "properties": {
        "functionHighlight.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable function highlighting"
        },
        "functionHighlight.disabledLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of language IDs to disable highlighting for. Use this to exclude specific languages while keeping highlighting enabled for others. Example: [\"javascript\", \"python\"]. Available language IDs: c, cpp, python, javascript, typescript, typescriptreact, javascriptreact, java, rust, go, ruby, php, csharp, bash"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [
    "c",
    "cpp",
    "python",
    "javascript",
    "typescript",
    "java",
    "rust",
    "go",
    "ruby",
    "php",
    "csharp",
    "bash",
    "highlight",
    "function",
    "syntax",
    "tree-sitter"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/vscode": "^1.104.0",
    "generator-code": "^1.11.13",
    "typescript": "^5.9.3",
    "vscode-test": "^1.6.1",
    "yo": "^5.1.0"
  },
  "dependencies": {
    "tree-sitter-bash": "^0.25.0",
    "tree-sitter-c": "^0.24.1",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-go": "^0.25.0",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-php": "^0.24.2",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-ruby": "^0.23.1",
    "tree-sitter-rust": "^0.24.0",
    "tree-sitter-typescript": "^0.23.2",
    "web-tree-sitter": "^0.25.10"
  }
}
